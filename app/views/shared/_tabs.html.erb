  <div class="active portolio-section" id="achievements">
    <% @url_image_path = "https://source.unsplash.com/random/120x120" %>
    <%= render 'shared/horizontal-card' %>
    <% @url_image_path = "https://source.unsplash.com/random/120x119" %>
    <%= render 'shared/horizontal-card' %>
    <% @url_image_path = "https://source.unsplash.com/random/119x119" %>
    <%= render 'shared/horizontal-card' %>
  </div>
